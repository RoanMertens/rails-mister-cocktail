<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-1 col-sm-offset-2">
    </div>
    <div class="col-sm-5">
        <h1><%= @cocktail.name %></h1>
    </div>
  </div>
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <h2>Ingredients:</h2>
      </div>
    </div>
      <ul>
        <div class="row">
          <% @cocktail.doses.each do |dose| %>
            <li>
              <div class="col-sm-1 col-sm-offset-4">
                <%= link_to "", dose_path(dose),
                method: :delete, :class=>"fas fa-trash-alt",
                data: { confirm: "Are you sure?" } %>
              </div>
              <div class="col-sm-3">
                <%= dose.description %> of <%= dose.ingredient.name %>
              </div>
            </li>
          <% end %>
          <li>
            <div class="col-sm-1 col-sm-offset-4">
              <%= link_to "", new_cocktail_dose_path(@cocktail), :class=>"far fa-plus-square" %>
            </div>
            <div class="col-sm-3">
                <p>add a dose</p>
            </div>
              </%>
            </div>
          </li>
        </div>
      </ul>
    </div>
</div>
